public class FiguraMCtest {
public static float Figura(int liczbapod){
    float x=0;
    float y =0;
    float pole =0;
    float gornalicza = 0;
    
    Random los = new Random();
    for(int i=0;i<liczbapod;i++){
        x=los.nextFloat();
        y=los.nextFloat();
        double funkcja= Math.pow(x,2);
        if(funkcja>y)
            gornalicza++;
        pole = gornalicza/liczbapod;
    }
    
    return pole;
    
}
public static void main(String [] args){
    System.out.println(Figura(100));
}
}
